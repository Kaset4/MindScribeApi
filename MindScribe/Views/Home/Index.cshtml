@model MindScribe.ViewModels.MainViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать</h1>
    <div class="mt-2">
        <form method="get" asp-controller="AccountManager" asp-action="Login">
            <input class="btn btn-outline-success" type="submit" value="Авторизация" />
        </form>
    </div>
    <div class="mt-2">
        <form method="get" asp-controller="AccountManager" asp-action="Register">
            <input class="btn btn-outline-primary" type="submit" value="Регистрация" />
        </form>
    </div>
</div>
