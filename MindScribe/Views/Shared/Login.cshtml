@model MindScribe.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login Page";
}

<div>
    <h3>Вход в приложение</h3>
    <hr class="horizon-line" />
    <form method="post" asp-controller="AccountManager" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mt-2">
            <label>Логин</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mt-1">
            <label>Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mt-1">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>
        <input class="btn btn-primary mt-1" type="submit" value="Авторизация" />
    </form>
</div>